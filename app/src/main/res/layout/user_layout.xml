<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_background_user_chat"
        android:orientation="horizontal">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageAvtAccountChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_1"
            app:shapeAppearanceOverlay="@style/ImageViewCircleOverlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Văn Viết Tâmmmmmmmmmmmmmmmmmm"
                android:textSize="23dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/dartmouthGreen"
                android:maxWidth="280dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_content_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="260dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#6E6363"
                    android:text="Gửi lời chào giới thiệu đến với đối phương nào"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#6E6363"
                    android:gravity="center"
                    android:text=" -"/>

                <TextView
                    android:id="@+id/txt_time_chat"
                    android:layout_marginLeft="5dp"
                    android:textColor="#6E6363"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="23/04"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>