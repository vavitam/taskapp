<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_date_sent_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23/05/2024"
        android:textColor="@color/dartmouthGreen"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txt_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is sent message"
            android:textColor="@color/dartmouthGreen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:maxWidth="260dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_sent_time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:30"
            android:textColor="@color/pigmentGreen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textSize="12dp"
            android:layout_below="@id/txt_sent_message"/>
    </RelativeLayout>
</LinearLayout>